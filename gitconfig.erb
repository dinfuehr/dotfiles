[alias]
  st = status
  ci = commit -v
  co = checkout
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  hist = log --graph --decorate --pretty=format:\"%h %ad | %s%d [%an]\" --abbrev-commit --date=short

[color]
  ui = true

[core]
<% vim = path_tool 'vim'; if vim %>
	editor = <%= vim %>
<% end %>
	excludesfile = ~/.gitignore

[push]
	default = current

<% diffmerge = path_tool 'diffmerge'; if diffmerge %>
[merge]
	tool = diffmerge
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[mergetool]
	keepBackup = false
<% end %>
